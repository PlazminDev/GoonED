<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="res\shaders\imgui-frag.glsl" />
    <None Remove="res\shaders\imgui-frag.hlsl" />
    <None Remove="res\shaders\imgui-frag.hlsl.bytes" />
    <None Remove="res\shaders\imgui-vertex.glsl" />
    <None Remove="res\shaders\imgui-vertex.hlsl" />
    <None Remove="res\shaders\imgui-vertex.hlsl.bytes" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="res\shaders\imgui-frag.glsl" />
    <EmbeddedResource Include="res\shaders\imgui-frag.hlsl" />
    <EmbeddedResource Include="res\shaders\imgui-frag.hlsl.bytes" />
    <EmbeddedResource Include="res\shaders\imgui-vertex.glsl" />
    <EmbeddedResource Include="res\shaders\imgui-vertex.hlsl" />
    <EmbeddedResource Include="res\shaders\imgui-vertex.hlsl.bytes" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ImGui.NET" Version="1.90.8.1" />
    <PackageReference Include="Veldrid" Version="4.9.0" />
    <PackageReference Include="Veldrid.ImGui" Version="5.72.0" />
    <PackageReference Include="Veldrid.SDL2" Version="4.9.0" />
    <PackageReference Include="Veldrid.StartupUtilities" Version="4.9.0" />
    <PackageReference Include="Veldrid.Utilities" Version="4.9.0" />
  </ItemGroup>

</Project>
